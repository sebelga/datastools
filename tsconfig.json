{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2015",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "outDir": "dist/lib",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "allowJs": true
  },
  "include": [
    "src",
    "typings",
    ".eslintrc.js"
  ]
}
