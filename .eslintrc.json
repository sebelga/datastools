{
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "script"
    },
    "root": true,
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "plugins": [
        "mocha"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": [
                    "**/test/**/*.js"
                ]
            }
        ],
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ],
        "prefer-rest-params": "off",
        "prefer-spread": "off",
        "no-restricted-globals": "off",
        "no-underscore-dangle": "off",
        "no-param-reassign": "off",
        "max-len": [
            "error",
            120
        ],
        "mocha/no-exclusive-tests": "error",
        "comma-dangle": [
            "error",
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "functions": "ignore"
            }
        ]
    }
}
